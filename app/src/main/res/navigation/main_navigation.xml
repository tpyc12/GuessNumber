<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.myhome.android.guessnumber.presenter.WelcomeFragment"
        android:label="WelcomeFragment" >
        <action
            android:id="@+id/action_welcomeFragment_to_choseLevelFragment"
            app:destination="@id/choseLevelFragment" />
    </fragment>
    <fragment
        android:id="@+id/choseLevelFragment"
        android:name="com.myhome.android.guessnumber.presenter.ChoseLevelFragment"
        android:label="fragment_chose_level"
        tools:layout="@layout/fragment_chose_level" >
        <action
            android:id="@+id/action_choseLevelFragment_to_gameFragment"
            app:destination="@id/gameFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameFragment"
        android:name="com.myhome.android.guessnumber.presenter.GameFragment"
        android:label="fragment_game"
        tools:layout="@layout/fragment_game" >
        <action
            android:id="@+id/action_gameFragment_to_gameFinishedFragment"
            app:destination="@id/gameFinishedFragment"
            app:popUpTo="@id/gameFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="level"
            app:argType="com.myhome.android.guessnumber.domain.entity.Level" />
    </fragment>
    <fragment
        android:id="@+id/gameFinishedFragment"
        android:name="com.myhome.android.guessnumber.presenter.GameFinishedFragment"
        android:label="fragment_game_finished"
        tools:layout="@layout/fragment_game_finished" >
        <argument
            android:name="gameResult"
            app:argType="com.myhome.android.guessnumber.domain.entity.GameResult" />
    </fragment>
</navigation>